@model IEnumerable<SubjectViewModel>

@{
    ViewData["Title"] = "Home";
}

<div class="bg-auth rounded-10 d-flex justify-content-between align-items-center px-4">
    <div class="text-white fs-1 fw-normal">Total Grade:</div>
    <span class="text-white fs-1 fw-bold ms-lg-3">@Model.Average(g => g.AverageGrade).ToString("#.##")</span>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Subject</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
        </tr>
        <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td colspan="2">Larry the Bird</td>
        </tr>
    </tbody>
</table>

