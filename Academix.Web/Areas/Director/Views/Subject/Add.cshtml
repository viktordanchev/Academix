@model AddSubjectViewModel

@{
    ViewData["Title"] = "Add Subject";
}

<div class="bg-auth rounded-10">
    <div class="text-center text-white fs-3 fw-normal pt-3">Subject</div>
    <hr class="bg-white mx-4 my-3" />
    <form method="post" class="d-flex flex-column">
        <div asp-validation-summary="ModelOnly" id="alerts" class="text-danger fw-bold" role="alert"></div>
        <div class="d-flex flex-column justify-content-between">
            <div class="mx-4">
                <label asp-for="Name" class="d-block text-white fs-5">Name</label>
                <input asp-for="Name" class="d-block w-100 form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger fw-bold"></span>
            </div>
            <div class="mx-4">
                <label asp-for="TeacherId" class="form-label-add-edit fs-5">Teacher</label>
                <select asp-for="TeacherId" class="form-control" aria-required="true">
                    <option value="" selected disabled hidden>Select teacher</option>
                    @foreach (var teacher in Model.Teachers)
                    {
                        <option value="@teacher.Id">@teacher.Name</option>
                    }
                </select>
                <span asp-validation-for="TeacherId" class="text-danger fw-bold"></span>
            </div>
        </div>
        <div class="d-flex flex-row mx-4 justify-content-between py-4">
            <a asp-controller="Subject" asp-action="All" class="w-20 btn btn-lg btn-primary">Cancel</a>
            <button asp-controller="Subject" asp-action="Add" type="submit" class="w-20 btn btn-lg btn-primary">Add</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}