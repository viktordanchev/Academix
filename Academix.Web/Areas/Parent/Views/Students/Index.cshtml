@model IEnumerable<StudentViewModel>

@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid bg-transparent my-4 p-3">
    <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3 text-center d-flex flex-wrap justify-content-center">
        @foreach (var student in Model)
        {
            <div class="col">
                <div class="rounded-10 bg-babyblue card h-100 shadow-sm">
                    <div class="card-body align-content-center">
                        <div class="clearfix">
                            <div class="col mb-3">
                                <div class="rounded-10 bg-auth card h-100 shadow-sm">
                                    <div class="card-body align-content-center">
                                        <div>
                                            <div class="d-block text-white fs-3 fw-normal">Student</div>
                                            <span class="text-white fs-3 fw-bold ms-lg-3">@student.Name</span>
                                        </div>
                                        <hr class="bg-white mx-4 my-3" />
                                        <div>
                                            <div class="d-inline text-white fs-5 fw-normal">School:</div>
                                            <span class="text-white fs-5 fw-bold ms-lg-3">@student.School</span>
                                        </div>
                                        <div>
                                            <div class="d-inline text-white fs-5 fw-normal">School director:</div>
                                            <span class="text-white fs-5 fw-bold ms-lg-3">@student.SchoolDirector</span>
                                        </div>
                                        <div>
                                            <div class="d-inline text-white fs-5 fw-normal">Class teacher:</div>
                                            <span class="text-white fs-5 fw-bold ms-lg-3">@student.ClassTeacher</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @foreach (var subject in student.Subjects)
                            {
                                <div class="col">
                                    <div class="rounded-10 bg-auth card h-100 shadow-sm px-3">
                                        <div class="card-body align-content-center fs-2 fw-bold">
                                            @subject.Name
                                        </div>
                                        <hr class="bg-white my-1" />
                                        <div class="d-block my-2 text-center">
                                            <div class="d-inline text-white fs-5 fw-normal">Total Absences:</div>
                                            <span class="text-white fs-4 fw-bold ms-lg-1">@subject.Absences</span>
                                            <div class="d-block text-white fs-5 fw-normal">Grades</div>
                                            <div class="d-flex flex-wrap justify-content-center gap-2">
                                                @foreach (var grade in subject.Grades)
                                                {
                                                    @if (grade.GradeNumber == 2)
                                                    {
                                                        <span data-toggle="popover"
                                                              data-bs-content="Type: @grade.GradeType | Date: @grade.DateAndTime"
                                                              class="grade px-2 rounded-10 bg-danger text-white fs-4 fw-bold">
                                                            @grade.GradeNumber
                                                        </span>
                                                    }
                                                    else if (grade.GradeNumber == 6)
                                                    {
                                                        <span data-toggle="popover"
                                                              data-bs-content="Type: @grade.GradeType | Date: @grade.DateAndTime"
                                                              class="grade px-2 rounded-10 bg-success text-white fs-4 fw-bold">
                                                            @grade.GradeNumber
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span data-toggle="popover"
                                                              data-bs-content="Type: @grade.GradeType | Date: @grade.DateAndTime"
                                                              class="grade px-2 rounded-10 bg-warning text-white fs-4 fw-bold">
                                                            @grade.GradeNumber
                                                        </span>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/popover.js"></script>
}