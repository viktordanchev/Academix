@using Academix.Core.Models.Class
@model IEnumerable<AbsenceViewModel>

@{
    ViewData["Title"] = "Absences";
}

<h1 class="display-1 fw-bold ">Absences</h1>

<div class="bg-auth rounded-10 px-3 py-3 d-flex flex-column gap-3 mx-3 my-3">
    @foreach (var absence in Model)
    {
        <div class="d-flex flex-row justify-content-between text-center mb-3">
            <div class="fs-4 fw-bold">Absence:</div>
            <span class="fs-4 ms-lg-3">| Excused: @absence.Excused | @absence.DateAndTime</span>
            <a asp-controller="Class" asp-action="ExcuseAbsence" asp-route-id="@absence.AbsenceId"
               asp-route-studentId="@absence.StudentId" class=" btn btn-primary ms-lg-3">Excuse</a>
        </div>
    }
    <a asp-controller="Class" asp-action="Index" class="w-20 btn btn-lg btn-primary">Cancel</a>
</div> 