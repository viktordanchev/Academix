@model IEnumerable<AllAbsencesViewModel>

@{
    ViewData["Title"] = "Absences";
}

<div class="bg-auth rounded-10 px-3 py-3 d-flex flex-column gap-3 mx-3 my-3">
    @foreach (var absence in Model)
    {
        <div class="d-flex flex-row justify-content-between text-center mb-3">
            <div class="fs-4 fw-bold">Absence:</div>
            <span class="fs-4 ms-lg-3">| Excused: @absence.Excused | @absence.DateAndTime</span>
            <a asp-controller="Student" asp-action="RemoveAbsence" asp-route-id="@absence.AbsenceId" 
            asp-route-studentId="@absence.StudentId" class="btn btn-primary ms-lg-3">Remove</a>
        </div>
    }
    <a asp-controller="Student" asp-action="Index" class="w-20 btn btn-lg btn-primary">Cancel</a>
</div>
