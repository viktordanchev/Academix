@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li>
        <form class="form-inline" asp-controller="Account" asp-action="Logout">
            <button type="submit" class="rounded-10 btn btn-lg btn-primary fw-bold">Logout</button>
        </form>
    </li>
</ul>

@section Scripts {
    <script src="~/js/background/app.js"></script>
    <script src="~/js/background/particles.js"></script>

}
