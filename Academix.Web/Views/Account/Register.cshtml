@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<a asp-controller="Home" asp-action="Index">
    <i class="fa-solid fa-xmark"></i>
</a>
<section id="particles-js">
    <form method="post">
        <hr />
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <input asp-for="FirstName" autocomplete="given-name" aria-required="true" />
            <label asp-for="FirstName">First Name</label>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <input asp-for="LastName" autocomplete="family-name" aria-required="true" />
            <label asp-for="LastName">Last Name</label>
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <input asp-for="Email" autocomplete="email" aria-required="true" />
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <input asp-for="Password" autocomplete="new-password" aria-required="true" />
            <label asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <input asp-for="ConfirmPassword" autocomplete="new-password" aria-required="true" />
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <button type="submit">Register</button>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
