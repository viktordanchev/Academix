@model AddRoleViewModel

@{
    ViewData["Title"] = "SignUp";
}

<div id="particles-js" class="wrapper">
    <div class="main-wrapper">
        <div class="form-wrapper">
            <form method="post">
                <div class="steps">
                    <div>Add Role</div>
                </div>

                <div class="form-step-2 active">
                    <div asp-validation-summary="ModelOnly" class="invalid-field validation"></div>
                    <div id="roles">
                        <label asp-for="Role" class="form-label">Choose role</label>
                        <select asp-for="Role" class="form-input">
                            <option value="" selected disabled hidden>Roles</option>
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="Role" class="invalid-field"></span>
                    </div>
                    <div id="schools">
                        <label asp-for="SchoolId" class="form-label">Choose school</label>
                        <select asp-for="SchoolId" class="form-input" id="schoolId">
                            <option value="" selected disabled hidden>Schools</option>
                            @foreach (var school in Model.Schools)
                            {
                                <option value="@school.Id">@school.Name</option>
                            }
                        </select>
                        <span asp-validation-for="SchoolId" class="invalid-field"></span>
                    </div>
                    <div id="classes" hidden>
                        <label asp-for="ClassId" class="form-label">Choose class</label>
                        <select asp-for="ClassId" class="form-input" id="classId">
                            <option value="" selected disabled hidden>Classes</option>
                        </select>
                        <span asp-validation-for="ClassId" class="invalid-field"></span>
                    </div>
                    <div id="students" hidden>
                        <label asp-for="StudentId" class="form-label">Choose student</label>
                        <select asp-for="StudentId" class="form-input" id="studentId">
                            <option value="" selected disabled hidden>Students</option>
                        </select>
                        <span asp-validation-for="StudentId" class="invalid-field"></span>
                    </div>
                </div>

                <div class="form-btn-wrapper">
                    <button type="submit" class="btn">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/background/particles.js"></script>
    <script src="~/js/background/app.js"></script>
    <script src="~/js/authentication/personalinfo.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            getClassesBySchoolId();
        })
        $("#schoolId").change(function () {
            getClassesBySchoolId();
        });
        var getClassesBySchoolId = function () {
            $.ajax({
                url: '@Url.Action("GetClassesBySchoolId", "Account")',
                type: 'GET',
                data: {
                    schoolId: $('#schoolId').val(),
                },
                success: function (data) {
                    $('#classId').find('option').remove().end()
                        .append('<option value="" selected disabled hidden>Classes</option>')
                    $(data).each(
                        function (index, item) {
                            $('#classId').append('<option value="' + item.id + '">' + item.name + '</option>')
                        }
                    );
                }
            })
        }
    </script>
    <script>
        $(document).ready(function () {
            getStudentsByClassId();
        })
        $("#classId").change(function () {
            getStudentsByClassId();
        });
        var getStudentsByClassId = function () {
            $.ajax({
                url: '@Url.Action("GetStudentsByClassId", "Account")',
                type: 'GET',
                data: {
                    classId: $('#classId').val(),
                },
                success: function (data) {
                    $('#studentId').find('option').remove().end()
                        .append('<option value="" selected disabled hidden>Students</option>')
                    $(data).each(
                        function (index, item) {
                            $('#studentId').append('<option value="' + item.id + '">' + item.name + '</option>')
                        }
                    );
                }
            })
        }
    </script>
}
